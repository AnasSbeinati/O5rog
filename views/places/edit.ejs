<% include ../partials/header %>

    <div class="row text-center">
        <div class="col-lg-12 mx-auto">
            <h1 class="mb-4">Edit <%=place.name%></h1>
            <div class="w-25 mx-auto">
                <form action="/places/<%=place._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control" type="text" name="place[name]" value="<%=place.name%>" required>    
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="place[address]" value="<%=place.address%>" required>    
                    </div>
                    <div class="form-group">
                        Place's image
                        <div class="custom-file mt-2">
                            <label for="image" class="custom-file-label"></label>
                            <input type="file" class="custom-file-input" name="image" id="image" accept="image/*">
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="place[description]" value="<%=place.description%>">    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-lg btn-block">Save Changes</button>
                    </div>
                </form>
                <a href="/places"> Go Back</a> 
            </div>
        </div>
    </div>

<% include ../partials/footer %>
