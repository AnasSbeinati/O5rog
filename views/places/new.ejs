<% include ../partials/header %>

    <div class="row text-center">
        <div class="col-lg-12 mx-auto">
            <h1 class="mb-4">Add a New Place</h1>
            <div class="w-25 mx-auto">
                <form action="/places" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control" type="text" name="place[name]" placeholder="name" required>    
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="place[address]" placeholder="address" required>    
                    </div>
                    <div class="form-group">
                        Place's image
                        <div class="custom-file mt-2">
                            <label for="image" class="custom-file-label"></label>
                            <input type="file" class="custom-file-input" name="image" id="image" accept="image/*" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="place[description]" placeholder="Describe the place, write pros and cons, etc..."></textarea>    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Add Place</button>
                    </div>
                </form>
                <a href="/places"> Go Back</a> 
            </div>
        </div>
    </div>

<% include ../partials/footer %>