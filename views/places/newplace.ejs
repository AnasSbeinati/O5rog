<% include ../partials/header %>

    <div class="row text-center">
        <div class="col-lg-12 mx-auto">
            <h1 class="mb-4">Add a New Place</h1>
            <div class="w-25 mx-auto">
                <form action="/" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" required>    
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="address" placeholder="address" required>    
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" placeholder="Describe the place, write pros and cons, etc..." required></textarea>    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Add Place</button>
                    </div>
                </form>
                <a href="/"> Go Back</a> 
            </div>
        </div>
    </div>

<% include ../partials/footer %>