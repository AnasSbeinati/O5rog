<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">Egyplaces</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-4">
                <img class="card-img-top" src="<%=place.image%>" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title"><%=place.name%></h4>
                    <h4 class="card-text" lang="ar" dir="RTL"><%=place.address%></h4>
                    <p> <%= place.description %> </p>
                    <p>
                        <em>Submitted by: <a href="/users/<%=place.author.id%>"><%= place.author.username %></a>, <%= moment(place.createdAt).fromNow() %></em>
                    </p>
                    <% if(currentUser && place.author.id.equals(currentUser._id)) { %>
                        <div class="btn-group" role="group">
                            <a class="btn btn-xs btn-warning m-2" href="/<%=place._id%>/edit">Edit Place</a>
                            <form class="delete-form m-2" action="/<%=place._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete Place</button>    
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
            <hr>
            <div class="card">
                  <div class="card-header">Reviews</div>
                  <div class="card-body">
                      <div class="text-right">
                            <a class="btn btn-success" href="/<%=place._id%>/comments/new">Leave a Review</a>    
                      </div>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">Cras justo odio</li>
                  </ul>
                </div>
            </div>
        </div>
    </div>    

<% include ../partials/footer %>